{
  "compilerOptions": {
    "moduleResolution": "node",

    "target": "es2020",
    "lib": ["ES2020"],
    "module": "commonjs",

    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "incremental": true,

    "outDir": "./dist",
    "baseUrl": "./"
  }
}
